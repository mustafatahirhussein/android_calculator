<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_row="5"
    android:layout_column="4"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/clear"
            android:text="C"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:background="@color/spcbtn"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/div"
            android:text="/"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:background="@color/operbtn"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:layout_column="1"/>

        <Button
            android:id="@+id/open"
            android:text="("
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/spcbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:layout_column="2"/>

        <Button
            android:id="@+id/close"
            android:text=")"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/spcbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:layout_column="3"/>


        <Button
            android:id="@+id/seven"
            android:text="7"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button
            android:id="@+id/eight"
            android:text="8"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:layout_column="1"/>

        <Button
            android:id="@+id/nine"
            android:text="9"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:layout_column="2"/>

        <Button
            android:id="@+id/add"
            android:text="+"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:background="@color/operbtn"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:layout_column="3"/>


        <Button
            android:id="@+id/fout"
            android:text="4"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:layout_column="0"/>

        <Button
            android:id="@+id/five"
            android:text="5"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:layout_column="1"/>

        <Button
            android:id="@+id/six"
            android:text="6"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:layout_column="2"/>

        <Button
            android:id="@+id/sub"
            android:text="-"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:background="@color/operbtn"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:layout_column="3"/>


        <Button
            android:id="@+id/one"
            android:text="1"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:layout_column="0"/>

        <Button
            android:id="@+id/two"
            android:text="2"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:layout_column="1"/>

        <Button
            android:id="@+id/three"
            android:text="3"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:layout_column="2"/>

        <Button
            android:id="@+id/mul"
            android:text="*"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:background="@color/operbtn"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:layout_column="3"/>


        <Button
            android:id="@+id/dot"
            android:text="."
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/spcbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:layout_column="0"/>

        <Button
            android:id="@+id/zero"
            android:text="0"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:layout_column="1"/>

        <Button
            android:id="@+id/dbzero"
            android:text="00"
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:layout_columnWeight="1"
            android:background="@color/numbtn"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:layout_column="2"/>

        <Button
            android:id="@+id/eq"
            android:text="="
            android:layout_height="90dp"
            android:textColor="@color/txt"
            android:background="@color/operbtn"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:layout_column="3"/>

        </GridLayout>

</LinearLayout>